@model IEnumerable<TourManagementApi.Models.Activity>

@{
    ViewData["Title"] = "Turlar";
}


<h2>Turlar</h2>
<a asp-action="CreateBasic" class="btn btn-primary mb-3">Yeni Tur Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item?.Title ?? "-")</td>
                <td>@(item?.Category ?? "-")</td>
                <td>@(item?.Status ?? "-")</td>
                <td>
                    <a asp-action="CreateBasic" asp-route-id="@item.Id" class="btn btn-sm btn-info">Temel Bilgi</a>
                    <a asp-action="CreateLocation" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Lokasyon</a>
                    <a asp-action="CreatePricing" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Fiyatlandırma</a>
                    <a asp-action="CreateAddons" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Ek Ürünler</a>
                    <a asp-action="CreateTime" asp-route-id="@item.Id" class="btn btn-sm btn-success">Zaman Yönetimi</a>
                    <a asp-action="CreateMeetingPoints" asp-route-id="@item.Id" class="btn btn-sm btn-dark">Buluşma Noktası</a>
                    <a asp-action="CreateBasic" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@ViewBag.Count

<script type="text/javascript">
    function sendHeight() {
        parent.postMessage(document.body.scrollHeight, "*");
    }

    window.addEventListener("load", sendHeight);
    window.addEventListener("resize", sendHeight); // sayfa yeniden boyutlandırılırsa
</script>