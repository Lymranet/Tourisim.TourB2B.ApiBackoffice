@model IEnumerable<TourManagementApi.Models.Activity>

@{
    ViewData["Title"] = "Turlar";
}


<h2>Turlar</h2>
<a asp-action="CreateBasic" class="btn btn-primary mb-3">Yeni Tur Ekle</a>
<a asp-controller="Reservations" asp-action="Index" class="btn btn-primary mb-3">Rezervasyon Listesi</a>
<a asp-controller="Reports" asp-action="Index" class="btn btn-primary mb-3">Raporlar </a>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Id)</td>
                <td>@(item?.Title ?? "-")</td>
                <td>@(item?.Category ?? "-")</td>
                <td>
                    <select class="form-select form-select-sm" onchange="updateStatus(@item.Id, this.value)">
                        <option value="draft" selected="@(item.Status == "draft")">Taslak</option>
                        <option value="inactive" selected="@(item.Status == "inactive")">Pasif</option>
                        <option value="active" selected="@(item.Status == "active")">Aktif</option>
                    </select>
                </td>
                <td class="d-flex flex-wrap gap-1">
                    <a asp-action="CreateBasic" asp-route-id="@(item?.Id ?? 0)" class="btn btn-sm btn-info">Temel Bilgi</a>
                    <a asp-action="CreateLocation" asp-route-id="@(item?.Id ?? 0)" class="btn btn-sm btn-secondary">Lokasyon</a>
                    <a asp-controller="Options" asp-action="Index" asp-route-activityId="@(item?.Id ?? 0)" class="btn btn-sm btn-warning">Seçenekler</a>
                    <a asp-action="CreateBasic" asp-route-id="@(item?.Id ?? 0)" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="ManageLanguages" asp-route-id="@(item?.Id ?? 0)" class="btn btn-sm btn-dark">Dil Yönetimi</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@ViewBag.Count

<script type="text/javascript">
    function sendHeight() {
        parent.postMessage(document.body.scrollHeight, "*");
    }
     function updateStatus(id, newStatus) {
        fetch(`/ActivitiesWizard/UpdateStatus/${id}`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
            },
            body: JSON.stringify({ status: newStatus })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Durum güncellenemedi.');
            }
        })
        .catch(error => {
            alert('Hata: ' + error.message);
        });
    }
    window.addEventListener("load", sendHeight);
    window.addEventListener("resize", sendHeight); // sayfa yeniden boyutlandırılırsa
</script>