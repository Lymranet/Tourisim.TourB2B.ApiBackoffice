@model TourManagementApi.Models.Activity

@{
    ViewData["Title"] = "Kapasite Tanımları";
}

<h2>@Model.Title @ViewData["Title"]</h2>

<div class="d-flex flex-wrap gap-2 mb-3">
    <a asp-action="CreateAvailability" asp-route-id="@Model.Id" class="btn btn-primary">Yeni Kapasite Ekle</a>

    <form asp-action="DeleteAllAvailabilities" asp-route-activityId="@Model.Id" method="post" onsubmit="return confirm('Tüm kapasite tanımlarını silmek istediğinize emin misiniz?');" class="d-inline">
        <button type="submit" class="btn btn-danger">Tüm Kapasite Tanımlarını Temizle</button>
    </form>

    <a class="btn btn-secondary" asp-controller="Activities" asp-action="Index">← Turlara Dön</a>
</div>



<table class="datatable2 table table-bordered table-striped ">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Başlangıç Saati</th>
            <th>Seçenek</th>
            <th>Mevcut</th>
            <th>Maksimum</th>
            <th>Bilet Kategorileri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var availability in Model.Availabilities.OrderByDescending(x => x.Date))
        {
            <tr>
                <td>@availability.Date.ToString("yyyy-MM-dd")</td>
                <td>@availability.StartTime?.ToLocalTime().ToString("HH:mm")</td>
                <td>@availability.Option?.Name</td>
                <td>@availability.AvailableCapacity</td>
                <td>@availability.MaximumCapacity</td>
                <td>
                    @foreach (var tc in availability.TicketCategoryCapacities)
                    {
                        <div>@tc.TicketCategory?.Name: @tc.Capacity</div>
                    }
                </td>
                <td>
                    <a asp-action="EditAvailability" asp-route-id="@availability.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <form asp-action="DeleteAvailability" asp-route-id="@availability.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

