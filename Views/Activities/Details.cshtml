@if (Model.Options != null && Model.Options.Any())
{
    <h3>Seçenekler (Options)</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Başlangıç Saati</th>
                <th>Satış Başlangıç Tarihi</th>
                <th>Satış Bitiş Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var option in Model.Options)
        {
            <tr>
                <td>@option.Adi</td>
                <td>@option.BaslangicSaati</td>
                <td>@option.SatisBaslangicTarihi?.ToString("yyyy-MM-dd")</td>
                <td>@option.SatisBitisTarihi?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Options", new { id = option.Id })">Düzenle</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Options", new { id = option.Id })" onclick="return confirm('Bu seçeneği silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Bu tura ait henüz seçenek (option) eklenmemiş.</p>
}
<a class="btn btn-primary" href="@Url.Action("Create", "Options", new { activityId = Model.Id })">Yeni Seçenek Ekle</a> 